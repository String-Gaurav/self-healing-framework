# Self-Healing Test Framework Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# FRAMEWORK SETTINGS
# =============================================================================
ENABLE_HEALING=true
ENABLE_AI=true
HEALING_MODE=aggressive
MAX_HEALING_ATTEMPTS=3
HEALING_TIMEOUT=30000

# =============================================================================
# AI INTEGRATION SETTINGS
# =============================================================================
# AI Provider: openai, anthropic, local
AI_PROVIDER=openai
AI_MODEL=gpt-4
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=2000
AI_ENABLE_LEARNING=true
AI_LEARNING_PATH=./data/learning

# OpenAI API Key (required if AI_PROVIDER=openai)
OPENAI_API_KEY= put key here.

# Anthropic API Key (required if AI_PROVIDER=anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_DIR=./logs
LOG_MAX_FILES=5
LOG_MAX_SIZE=10MB

# =============================================================================
# PLAYWRIGHT SETTINGS
# =============================================================================
# Browser settings
HEADLESS=true
SLOW_MO=0
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720

# Timeout settings (in milliseconds)
ACTION_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000
TEST_TIMEOUT=60000
EXPECT_TIMEOUT=10000

# Browser selection (comma-separated)
PLAYWRIGHT_BROWSERS=chromium,firefox,webkit

# =============================================================================
# API TESTING SETTINGS
# =============================================================================
API_BASE_URL=https://jsonplaceholder.typicode.com
API_TIMEOUT=30000
API_RETRIES=3
API_RETRY_DELAY=1000
API_HEADERS={"Content-Type": "application/json", "User-Agent": "Self-Healing-Framework"}

# =============================================================================
# HEALING STRATEGIES
# =============================================================================
# Comma-separated list of healing strategies to enable
HEALING_STRATEGIES=locator_healing,wait_healing,element_state_healing,navigation_healing,api_endpoint_healing,api_schema_healing,api_response_healing,data_healing

# Pattern learning settings
HEALING_LEARNING=true
HEALING_PATTERNS_PATH=./data/patterns
HEALING_SUCCESS_THRESHOLD=0.7

# =============================================================================
# TEST DATA SETTINGS
# =============================================================================
TEST_DATA_PATH=./test-data
TEST_DATA_FORMAT=json
TEST_DATA_HEALING=true
TEST_DATA_VALIDATION=true

# =============================================================================
# WEB SERVER SETTINGS (for local testing)
# =============================================================================
# Set to true to start a local web server for testing
START_SERVER=false
SERVER_COMMAND=npm start
SERVER_PORT=3000

# =============================================================================
# TEST EXECUTION SETTINGS
# =============================================================================
# Base URL for tests
BASE_URL=http://localhost:3000

# Test execution mode
NODE_ENV=development

# CI/CD settings
CI=false

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================
# Enable debug mode for detailed logging
DEBUG=false

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Enable test data generation
ENABLE_TEST_DATA_GENERATION=false

# Enable screenshot comparison
ENABLE_SCREENSHOT_COMPARISON=true

# Screenshot comparison threshold (0-1)
SCREENSHOT_THRESHOLD=0.2

# Maximum diff pixels for screenshot comparison
MAX_DIFF_PIXELS=100

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Enable notifications for test results
ENABLE_NOTIFICATIONS=false

# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=

# Email settings for notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
NOTIFICATION_EMAIL=

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================
# Add your custom environment variables here
# CUSTOM_SETTING=value
